<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainActivity">

    <fragment
        android:id="@+id/MainActivity"
        android:name="stainsby.cole.androidscavengerhunt.MainActivity"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_MainActivity_to_SettingsFragment"
            app:destination="@id/SettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/SettingsFragment"
        android:name="stainsby.cole.androidscavengerhunt.SettingsFragment"
        android:label="@string/settings_fragment_label"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_SettingsFragment_to_MainActivity"
            app:destination="@id/MainActivity" />
    </fragment>
</navigation>